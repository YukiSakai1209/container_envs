{
    "name": "Research Environment",
    "dockerComposeFile": "docker-compose.yml",
    "service": "workspace",
    "workspaceFolder": "/home/vscode/vermeer/container_envs",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers",
                "charliermarsh.ruff",
                "njpwerner.autodocstring",
                "streetsidesoftware.code-spell-checker",
                "eamodio.gitlens",
                "github.vscode-github-actions",
                "github.copilot",
                "github.copilot-chat"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/opt/conda/envs/research/bin/python",
                "python.linting.enabled": true,
                "python.formatting.provider": "black",
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.organizeImports": true
                },
                "jupyter.interactiveWindow.textEditor.executeSelection": true,
                "jupyter.widgetScriptSources": ["jsdelivr.com", "unpkg.com"]
            }
        }
    },
    "remoteUser": "vscode",
    "postCreateCommand": "echo 'conda activate research' >> ~/.bashrc",
    "mounts": [
        "source=${localEnv:HOME}/.windsurf,target=/home/vscode/.windsurf,type=bind,consistency=cached"
    ]
}