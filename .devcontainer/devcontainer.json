{
    "name": "Research Environment",
    "dockerComposeFile": "docker-compose.yml",
    "build": {
        "context": "..",
        "dockerfile": "base/Dockerfile",
        "args": {
            "ENVIRONMENT_YML": ".devcontainer/environment.yml"
        }
    },
    "service": "workspace",
    "workspaceFolder": "/home/vscode/vermeer/container_envs",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers",
                "charliermarsh.ruff",
                "njpwerner.autodocstring",
                "streetsidesoftware.code-spell-checker",
                "eamodio.gitlens",
                "github.vscode-github-actions",
                "github.copilot",
                "github.copilot-chat"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/opt/conda/envs/research/bin/python",
                "python.terminal.activateEnvironment": true,
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash",
                        "args": ["--login"]
                    }
                },
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.inheritEnv": false,
                "python.linting.enabled": true,
                "python.formatting.provider": "black",
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.organizeImports": true
                },
                "jupyter.interactiveWindow.textEditor.executeSelection": true,
                "jupyter.widgetScriptSources": ["jsdelivr.com", "unpkg.com"]
            }
        }
    },
    "remoteUser": "vscode",
    "updateRemoteUserUID": true,
    "overrideCommand": false,
    "postCreateCommand": "echo 'source /opt/conda/etc/profile.d/conda.sh && conda activate research' >> ~/.bashrc",
    "mounts": [
        "source=${localEnv:HOME}/.windsurf,target=/home/vscode/.windsurf,type=bind,consistency=cached"
    ]
}