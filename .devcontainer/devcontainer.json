{
    "name": "Research Environment",
    "build": {
        "context": "../base",
        "dockerfile": "Dockerfile"
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/vscode/vermeer/container_envs,type=bind,consistency=cached",
    "workspaceFolder": "/home/vscode/vermeer/container_envs",
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/opt/conda/envs/research/bin/python",
                "python.terminal.activateEnvironment": true
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/python:1": "none"
    },
    "remoteUser": "vscode",
    "updateRemoteUserUID": true,
    "postCreateCommand": "source /etc/profile.d/conda.sh && conda activate research",
    "postStartCommand": "source /etc/profile.d/conda.sh && conda activate research",
    "postAttachCommand": "source /etc/profile.d/conda.sh && conda activate research"
}