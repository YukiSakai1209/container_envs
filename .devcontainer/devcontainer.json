{
    "name": "Research Environment",
    "build": {
        "context": "..",
        "dockerfile": "base/Dockerfile"
    },
    "workspaceFolder": "/home/vscode/vermeer/container_envs",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/vscode/vermeer/container_envs,type=bind,consistency=cached",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/opt/conda/envs/research/bin/python",
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash",
                        "args": ["--login"]
                    }
                },
                "terminal.integrated.env.linux": {
                    "CONDA_DIR": "/opt/conda"
                }
            }
        }
    },
    "remoteUser": "vscode",
    "updateRemoteUserUID": true,
    "postCreateCommand": "echo '. \"${CONDA_DIR}/etc/profile.d/conda.sh\" && conda activate research' >> ~/.bashrc"
}